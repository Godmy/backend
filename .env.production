# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Keep this file secure and never commit to git!

# JWT Configuration
# MUST CHANGE: Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=templates_prod
DB_USER=template_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Database URL (constructed from above values)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=False

# Database Initialization
# MUST BE FALSE in production
SEED_DATABASE=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# MUST SET: Strong password for Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# CORS Configuration
# Replace with your production domain(s)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration - Production SMTP
# Option 1: SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_USE_TLS=True
FROM_EMAIL=noreply@yourdomain.com

# Option 2: AWS SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USERNAME=YOUR_AWS_SMTP_USERNAME
# SMTP_PASSWORD=YOUR_AWS_SMTP_PASSWORD
# SMTP_USE_TLS=True
# FROM_EMAIL=noreply@yourdomain.com

# Option 3: Gmail (not recommended for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_USE_TLS=True
# FROM_EMAIL=your-email@gmail.com

# Frontend URL
# Replace with your production frontend URL
FRONTEND_URL=https://yourdomain.com

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Telegram OAuth
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Security
# Add your production domain
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Sentry (Optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=INFO
